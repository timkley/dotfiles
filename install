#/bin/bash

installFlow=(
  hushLoginMessage
  createDefaultFolders
  installPowerlineFonts
  installHomebrew
  installOhMyZsh
  symlinkDotfiles
  installHomebrewFormulae
  configureNpm
  setMacOsDefaults
)

for step in "${installFlow[@]}"; do
  stepFile="$HOME/.dotfiles/steps/$step.sh"
  if [ -f $stepFile ]; then
    separator
    echo "Running $step"
    source $stepFile
  else
    echo "File $stepFile not found"
  fi
done

source ~/.zshrc

echo '++++++++++++++++++++++++++++++'
echo 'All done!'
echo '++++++++++++++++++++++++++++++'
